{
  "compileOnSave": false,
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@library/catalogue": ["libs/catalogue/src/index.ts"],
      "@library/cattalog": ["libs/cattalog/src/index.ts"],
      "@library/lending/application": ["libs/lending/application/src/index.ts"],
      "@library/lending/domain": ["libs/lending/domain/src/index.ts"],
      "@library/lending/infrastructure": [
        "libs/lending/infrastructure/src/index.ts"
      ],
      "@library/lending/ui-rest": ["libs/lending/ui-rest/src/index.ts"],
      "@library/lennd": ["libs/lennd/src/index.ts"],
      "@library/shared/domain": ["libs/shared/domain/src/index.ts"],
      "@library/shared/infrastructure-nestjs-cqrs-events": [
        "libs/shared/infrastructure-nestjs-cqrs-events/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
